            <button 
              onClick={() => scrollToSection('about')} 
              onMouseEnter={playHoverSound}
              className="cyber-font hover:text-[#66FCF1] transition-colors hover:underline decoration-[#66FCF1] decoration-2 underline-offset-4"
            >
              About Me
            </button>
            <button 
              onClick={() => scrollToSection('portfolio')} 
              onMouseEnter={playHoverSound}
              className="cyber-font hover:text-[#66FCF1] transition-colors hover:underline decoration-[#66FCF1] decoration-2 underline-offset-4"
            >
              Portfolio
            </button>
            <button 
              onClick={() => scrollToSection('contact')} 
              onMouseEnter={playHoverSound}
