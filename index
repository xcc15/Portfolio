      </nav>

      {/* Home Section */}
      <section id="home" className="min-h-screen flex flex-col justify-center items-center relative overflow-hidden pt-20 perspective-1000">
        
        {/* Animated Grid Background */}
        <div className="absolute inset-0 bg-[linear-gradient(rgba(102,252,241,0.03)_1px,transparent_1px),linear-gradient(90deg,rgba(102,252,241,0.03)_1px,transparent_1px)] bg-[size:50px_50px] [mask-image:radial-gradient(ellipse_60%_60%_at_50%_50%,#000_70%,transparent_100%)]"></div>
        
        {/* Parallax Background Blobs */}
        <div 
          className="absolute top-1/3 left-1/4 w-96 h-96 bg-[#45A29E]/20 rounded-full blur-[120px] -z-10 transition-transform duration-200 ease-out"
          style={{ transform: `translate(${mousePos.x * -2}px, ${mousePos.y * -2}px)` }}
        ></div>
        <div 
          className="absolute bottom-1/3 right-1/4 w-96 h-96 bg-[#66FCF1]/10 rounded-full blur-[120px] -z-10 transition-transform duration-200 ease-out"
          style={{ transform: `translate(${mousePos.x * 2}px, ${mousePos.y * 2}px)` }}
        ></div>

        <div className="text-center z-10 space-y-6 px-4">
          <div className="inline-block px-3 py-1 mb-2 border border-[#45A29E]/50 rounded-full bg-[#1F2833]/50 text-[#66FCF1] text-xs font-mono tracking-widest animate-pulse" onMouseEnter={playHoverSound}>
            HELLO_WORLD
          </div>
          
          <h1 className="text-5xl md:text-7xl font-extrabold tracking-tight text-white pb-2 relative neon-glow" onMouseEnter={playHoverSound}>
            <span className="relative inline-block hover:scale-105 transition-transform duration-300">Dominic</span>{' '}
            <span className="text-transparent bg-clip-text bg-gradient-to-r from-[#66FCF1] to-[#45A29E] relative inline-block hover:scale-105 transition-transform duration-300">Lumibao</span>
          </h1>
          
          <p className="text-xl md:text-2xl text-[#C5C6C7] font-medium tracking-wide flex items-center justify-center gap-2" onMouseEnter={playHoverSound}>
            <span className="text-[#45A29E]">&lt;</span> 
            Aspiring Data Scientist 
            <span className="w-0.5 h-6 bg-[#66FCF1] animate-blink ml-1"></span>
            <span className="text-[#45A29E]">/&gt;</span>
          </p>
          
          {/* Staggered Animation for Skills with Tooltips */}
          <div className="flex flex-wrap justify-center gap-3 mt-8">
            {skills.map((skill, index) => (
              <div 
                key={index}
                className="group relative flex items-center gap-2 px-4 py-2 rounded-full bg-[#1F2833] border border-[#45A29E]/30 hover:border-[#66FCF1] hover:shadow-[0_0_15px_rgba(102,252,241,0.3)] transition-all cursor-default text-sm text-[#66FCF1] animate-float cyber-font"
                style={{ animationDelay: `${index * 0.2}s` }}
                onMouseEnter={playHoverSound}
              >
                {skill.icon}
                <span>{skill.name}</span>
                
                {/* Tooltip Content */}
                <div className="absolute bottom-full left-1/2 -translate-x-1/2 mb-3 w-max max-w-[240px] px-3 py-2 bg-[#0B0C10] border border-[#66FCF1] text-[#66FCF1] text-xs rounded shadow-[0_0_15px_rgba(102,252,241,0.2)] opacity-0 group-hover:opacity-100 transition-all duration-300 pointer-events-none z-20 translate-y-2 group-hover:translate-y-0 text-center font-mono">
                  {skill.details}
                  {/* Tooltip Arrow */}
                  <div className="absolute top-full left-1/2 -translate-x-1/2 border-4 border-transparent border-t-[#66FCF1]"></div>
                </div>
              </div>
