import React, { useState, useEffect, useCallback } from 'react';
import { 
  Code, 
  Database, 
  BarChart, 
  PieChart, 
  Mail, 
  Linkedin, 
  Github, 
  ChevronDown, 
  Award,
  Terminal,
  FileSpreadsheet,
  Activity,
  Layers,
  Cpu,
  Binary
} from 'lucide-react';

const Portfolio = () => {
  const [activePortfolioTab, setActivePortfolioTab] = useState('projects');
  const [scrolled, setScrolled] = useState(false);
  const [mousePos, setMousePos] = useState({ x: 0, y: 0 });

  // --- Sound Effects Logic (Web Audio API) ---
  const playHoverSound = useCallback(() => {
    try {
      const AudioContext = window.AudioContext || window.webkitAudioContext;
      if (!AudioContext) return;
      
      const ctx = new AudioContext();
      const osc = ctx.createOscillator();
      const gain = ctx.createGain();

      // Cyber Blip Settings
      osc.type = 'sine';
      osc.frequency.setValueAtTime(800, ctx.currentTime);
      osc.frequency.exponentialRampToValueAtTime(1200, ctx.currentTime + 0.05);
      
      gain.gain.setValueAtTime(0.05, ctx.currentTime); // Low volume
      gain.gain.exponentialRampToValueAtTime(0.001, ctx.currentTime + 0.05);

      osc.connect(gain);
      gain.connect(ctx.destination);

      osc.start();
      osc.stop(ctx.currentTime + 0.05);
    } catch (e) {
      console.error("Audio play failed", e);
    }
  }, []);

  const playClickSound = useCallback(() => {
    try {
      const AudioContext = window.AudioContext || window.webkitAudioContext;
      if (!AudioContext) return;

      const ctx = new AudioContext();
      const osc = ctx.createOscillator();
      const gain = ctx.createGain();

      // Cyber Click/Confirm Settings
      osc.type = 'square'; // Grittier sound for click
      osc.frequency.setValueAtTime(300, ctx.currentTime);
      osc.frequency.exponentialRampToValueAtTime(100, ctx.currentTime + 0.1);
      
      gain.gain.setValueAtTime(0.05, ctx.currentTime);
      gain.gain.exponentialRampToValueAtTime(0.001, ctx.currentTime + 0.1);

      osc.connect(gain);
      gain.connect(ctx.destination);

      osc.start();
      osc.stop(ctx.currentTime + 0.1);
    } catch (e) {
      console.error("Audio play failed", e);
    }
  }, []);
  // -------------------------------------------

  // Handle scroll effect for navbar
  useEffect(() => {
    const handleScroll = () => {
      setScrolled(window.scrollY > 50);
    };
    window.addEventListener('scroll', handleScroll);
    return () => window.removeEventListener('scroll', handleScroll);
  }, []);

  // Handle mouse move for parallax effect
  useEffect(() => {
    const handleMouseMove = (e) => {
      setMousePos({
        x: (e.clientX / window.innerWidth) * 20 - 10,
        y: (e.clientY / window.innerHeight) * 20 - 10
      });
    };
    window.addEventListener('mousemove', handleMouseMove);
    return () => window.removeEventListener('mousemove', handleMouseMove);
  }, []);

  const scrollToSection = (id) => {
    playClickSound();
    const element = document.getElementById(id);
    if (element) {
      element.scrollIntoView({ behavior: 'smooth' });
    }
  };

  const handleTabChange = (tab) => {
    playClickSound();
    setActivePortfolioTab(tab);
  };

  const skills = [
    { 
      name: 'Python', 
      icon: <img src="https://cdn.jsdelivr.net/gh/devicons/devicon/icons/python/python-original.svg" alt="Python" className="w-4 h-4" />,
      details: "pandas, numpy, matplotlib, scikit-learn, pytorch"
    },
    { 
      name: 'Excel', 
      icon: <img src="https://upload.wikimedia.org/wikipedia/commons/7/73/Microsoft_Excel_2013-2019_logo.svg" alt="Excel" className="w-4 h-4" />,
      details: "vlookup, pivottables, conditional statements"
    },
    { 
      name: 'Tableau', 
      icon: <img src="https://upload.wikimedia.org/wikipedia/commons/4/4b/Tableau_Logo.png" alt="Tableau" className="w-4 h-4" />,
      details: "analysis and dashboarding"
    },
    { 
      name: 'PowerBI', 
      icon: <img src="https://upload.wikimedia.org/wikipedia/commons/c/cf/New_Power_BI_Logo.svg" alt="Power BI" className="w-4 h-4" />,
      details: "analysis and dashboarding"
    }
  ];

  const projects = [
    { title: "Customer Churn Prediction", desc: "Predicting customer attrition using logistic regression and random forest algorithms." },
    { title: "Sales Dashboard", desc: "Interactive Tableau dashboard visualizing regional sales performance and KPI tracking." },
    { title: "Stock Market Analyzer", desc: "Python script utilizing Pandas to analyze historical trends and moving averages." },
    { title: "Housing Price Model", desc: "Regression model to predict real estate prices based on square footage and location." },
    { title: "E-commerce Sentiment", desc: "NLP project analyzing product reviews to categorize customer feedback sentiment." },
    { title: "Supply Chain Optimization", desc: "Using linear programming (PuLP) to optimize logistics routes and reduce costs." },
    { title: "Credit Risk Assessment", desc: "Classification model for loan approval probability using historical financial data." },
    { title: "Social Media Tracker", desc: "PowerBI report tracking engagement metrics, follower growth, and campaign ROI." },
    { title: "Healthcare Data ETL", desc: "Cleaning and transforming large patient datasets using SQL and Python for analysis." }
  ];

  const certifications = [
    { title: "Google Data Analytics", issuer: "Coursera" },
    { title: "IBM Data Science Professional", issuer: "IBM" },
    { title: "Tableau Desktop Specialist", issuer: "Tableau" },
    { title: "Certified Associate in Python", issuer: "Python Institute" },
    { title: "Microsoft Certified: Power BI", issuer: "Microsoft" }
  ];

  return (
    <div className="min-h-screen bg-[#0B0C10] text-[#C5C6C7] font-cyber selection:bg-[#66FCF1] selection:text-[#0B0C10] overflow-x-hidden">
      
      {/* Custom Styles for Animations & Fonts */}
      <style>{`
        @import url('https://fonts.googleapis.com/css2?family=Orbitron:wght@400;500;600;700;800;900&family=Rajdhani:wght@300;400;500;600;700&display=swap');
        
        .font-cyber {
          font-family: 'Rajdhani', sans-serif;
          font-size: 1.1rem;
        }
        
        h1, h2, h3, .cyber-font {
          font-family: 'Orbitron', sans-serif;
          letter-spacing: 0.05em;
        }

        @keyframes float {
          0% { transform: translateY(0px); }
          50% { transform: translateY(-20px); }
          100% { transform: translateY(0px); }
        }
        .animate-float {
          animation: float 6s ease-in-out infinite;
        }
        /* Pause float animation on hover for easier reading */
        .animate-float:hover {
          animation-play-state: paused;
        }
        
        @keyframes blink {
          0%, 100% { opacity: 1; }
          50% { opacity: 0; }
        }
        .animate-blink {
          animation: blink 1s step-end infinite;
        }
        .neon-glow {
          filter: drop-shadow(0 0 5px rgba(102, 252, 241, 0.3)) 
                  drop-shadow(0 0 10px rgba(102, 252, 241, 0.2))
                  drop-shadow(0 0 20px rgba(102, 252, 241, 0.1));
        }
      `}</style>

      {/* Navigation Bar */}
      <nav className={`fixed top-0 left-0 right-0 z-50 transition-all duration-300 ${scrolled ? 'bg-[#0B0C10]/90 backdrop-blur-md shadow-lg shadow-[#66FCF1]/10 py-4' : 'bg-transparent py-6'}`}>
        <div className="max-w-6xl mx-auto px-6 flex justify-between items-center">
          <div className="text-xl font-bold tracking-tighter text-[#66FCF1] flex items-center gap-1 cyber-font cursor-pointer" onMouseEnter={playHoverSound}>
            <Cpu size={20} className="animate-spin-slow" /> DL.
          </div>
          <div className="hidden md:flex space-x-8 text-sm font-medium text-[#C5C6C7]">
            <button 
              onClick={() => scrollToSection('home')} 
              onMouseEnter={playHoverSound}
              className="cyber-font hover:text-[#66FCF1] transition-colors hover:underline decoration-[#66FCF1] decoration-2 underline-offset-4"
            >
              Home
